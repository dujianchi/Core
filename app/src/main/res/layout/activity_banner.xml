<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <cn.dujc.widget.banner.DuBanner
        android:id="@+id/db_banner"
        app:widget_color_default="@color/colorPrimary"
        app:widget_color_selected="@color/colorAccent"
        app:widget_indicator_edge="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp" />

    <cn.dujc.widget.banner.IrregularIndicator
        android:id="@+id/ii_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>